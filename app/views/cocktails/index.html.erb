<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.2)), url(<%= image_path "Mushroom2Cocktail.jpg" %>)">
  <div class="banner-content text-center">
    <h1>Salty Tundra Bar</h1>
    <br>
    <button class="btn btn-outline-light"><%= link_to "Create new Cocktail", new_cocktail_path%></button>
  </div>
</div>
<div class="container text-center">
  <h3>Our cocktails</h3>
  <div class="row cards">
   <% @cocktails.each do |cocktail| %>
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.2)), url(<%= cl_image_path cocktail.photo, width: 300, height: 300, crop: :fill %>);">
       <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
      </div>
  <% end %>
</div>
</div>


